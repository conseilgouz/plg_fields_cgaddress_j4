<?xml version="1.0" encoding="utf-8"?>
<form>
	<config>
		<inlinehelp button="show"/>
	</config>
	<fields name="fieldparams">
		<fieldset name="fieldparams" addfieldpath="/plugins/fields/cgaddress/src/Form/Field">
			<field
				name="minlength"
				type="number" default="10"
				label="PLG_FIELDS_CGADDRESS_MINLENGTH_LABEL"
				description="PLG_FIELDS_CGADDRESS_MINLENGTH_DESC"
			/>
   			<field  name="showgps" type="radio" class="btn-group btn-group-yesno"
				default="true" 	label="PLG_FIELDS_CGADDRESS_SHOW_GPS" description="PLG_FIELDS_CGADDRESS_SHOW_GPS_DESC">
				<option value="true">JYES</option>
				<option value="false">JNO</option>
			</field>
			<field
				name="mapheight"
				type="text" default="300px"
				label="PLG_FIELDS_CGADDRESS_MAPHEIGHT_LABEL"
				description="PLG_FIELDS_CGADDRESS_MAPHEIGHT_DESC"
			/>
			<field
				name="mapwidth"
				type="text" default="100%"
				label="PLG_FIELDS_CGADDRESS_MAPWIDTH_LABEL"
				description="PLG_FIELDS_CGADDRESS_MAPWIDTH_DESC"
			/>
			<field
				name="mapzoom"
				type="number" default="15"
				label="PLG_FIELDS_CGADDRESS_MAPZOOM_LABEL"
				description="PLG_FIELDS_CGADDRESS_MAPZOOM_DESC"
			/>
   			<field  name="showpopup" type="radio" class="btn-group btn-group-yesno"
				default="true" 	label="PLG_FIELDS_CGADDRESS_SHOW_POPUP" description="PLG_FIELDS_CGADDRESS_SHOW_POPUP_DESC">
				<option value="true">JYES</option>
				<option value="false">JNO</option>
			</field>
   			<field  showon="showpopup:true" name="showiti" type="radio" class="btn-group btn-group-yesno"
				default="true" 	label="PLG_FIELDS_CGADDRESS_SHOW_ITI" description="PLG_FIELDS_CGADDRESS_SHOW_ITI_DESC">
				<option value="true">JYES</option>
				<option value="false">JNO</option>
			</field>
		</fieldset>
	</fields>
</form>
